{
    "description": "Load an image or directory to create a blur wallpaper on your desktop. Fully customizable.\n Author: Pablo Pizarro @ppizarror.com.",
    "file": "index.html",
    "general": {
        "properties": {
            "schemecolor": {
                "order": 0,
                "text": "ui_browse_properties_scheme_color",
                "type": "color",
                "value": "0 0 0"
            },
            "backgroundcolor": {
                "order": 1,
                "text": "ui_editor_scene_options_background_color",
                "type": "color",
                "value": "0.2 0.2 0.2",
                "condition": "customrandomdirectory.value == '' && customimage.value == ''"
            },
            "background-image": {
                "order": 2,
                "text": "<h5><b>Background image</b></h5>",
                "type": "text",
                "value": false
            },
            "customimage": {
                "text": "User image",
                "type": "file",
                "order": 3,
                "value": "",
                "condition": "customrandomdirectory.value == ''"
            },
            "customrandomdirectory": {
                "text": "Random directory",
                "type": "directory",
                "mode": "ondemand",
                "order": 4,
                "value": "",
                "condition": "customimage.value == ''"
            },
            "background-property": {
                "order": 5,
                "text": "<br><h5><b>Background properties</b></h5>",
                "type": "text",
                "value": false,
                "condition": "customimage.value != '' || customrandomdirectory.value != ''"
            },
            "blur": {
                "text": "Blur (px)",
                "type": "slider",
                "value": 3,
                "min": 0,
                "max": 20,
                "order": 6,
                "condition": "customimage.value != '' || customrandomdirectory.value != ''"
            },
            "minutes": {
                "text": "Time transition (min)",
                "type": "slider",
                "value": 15,
                "min": 0,
                "max": 180,
                "order": 7,
                "condition": "customimage.value == '' && customrandomdirectory.value != ''"
            }
        }
    },
    "title": "Blur-Wallpaper",
    "type": "web",
    "monetization": false
}
